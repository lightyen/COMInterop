<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:InputMethodCollection x:Key="InputMethodCollection" />
    </Window.Resources>
    <Grid>
        <StackPanel>
            <ListBox Name="InputMethodListBox" ItemsSource="{StaticResource InputMethodCollection}">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="InputMethod">
                        <TextBlock Text="{Binding Description}" FontSize="16" TextAlignment="Center"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <TextBox Height="30" TextChanged="TextBox_TextChanged" />
            <Button Content="選擇輸入法" Height="50" Width="300" Click="SelectInputMethod_Click" />
            <Button Content="當前輸入法" Height="50" Width="300" Click="CurrentInputMethod_Click" />
        </StackPanel>
    </Grid>
</Window>
